{
  "name"              : "Rotate Image",
  "version"           : "1.2.0",
  "description"       : "Context Menu: Rotate an image on a web page in +/- 90 degrees steps",
  "manifest_version"  : 3,
  "background"        : {
    "scripts"     : [
      "backgroundScript.js"
    ]
  },
  "content_scripts"   : [
    {
      "matches" : [ "<all_urls>" ],
      "js"      : [ "contentScript.js" ]
    }
  ],
  "permissions"       : [
    "activeTab",
    "contextMenus"
  ]
}